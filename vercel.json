{
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "static"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/login", "destination": "/api/app.py" },
    { "source": "/api/signup", "destination": "/api/app.py" },
    { "source": "/api/logout", "destination": "/api/app.py" },
    { "source": "/api/new_chat", "destination": "/api/app.py" },
    { "source": "/api/chats", "destination": "/api/app.py" },
    { "source": "/api/history/:chat_id", "destination": "/api/app.py" },
    { "source": "/api/chat/:chat_id", "destination": "/api/app.py" },
    { "source": "/api/admin", "destination": "/api/app.py" },
    { "source": "/static/(.*)", "destination": "/static/$1" },
    { "source": "/(.*)", "destination": "/static/index.html" }
  ]
}
