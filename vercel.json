{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r api/requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/login",
      "dest": "/api/app.py"
    },
    {
      "src": "/api/signup",
      "dest": "/api/app.py"
    },
    {
      "src": "/api/logout",
      "dest": "/api/app.py"
    },
    {
      "src": "/api/new_chat",
      "dest": "/api/app.py"
    },
    {
      "src": "/api/chats",
      "dest": "/api/app.py"
    },
    {
      "src": "/api/history/(?<chat_id>[^/]+)",
      "dest": "/api/app.py"
    },
    {
      "src": "/api/chat/(?<chat_id>[^/]+)",
      "dest": "/api/app.py"
    },
    {
      "src": "/api/admin",
      "dest": "/api/app.py"
    },
    {
      "src": "/styles.css",
      "dest": "/static/styles.css"
    },
    {
      "src": "/script.js",
      "dest": "/static/script.js"
    },
    {
      "src": "/(.*)",
      "dest": "/static/index.html"
    }
  ]
}
